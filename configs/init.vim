let mapleader = " "
set number
syntax enable
set encoding=utf-8

set tabstop=4
set shiftwidth=4
set expandtab

set mouse=a
set termguicolors
set wrap 
set linebreak
set cmdheight=2
set incsearch
set hlsearch 
set ignorecase
set smartcase
filetype plugin on 
filetype indent on 

set backup 
set backupdir=~/.config/nvim/backup 
set directory=~/.config/nvim/swap 
set undodir=~/.config/nvim/undo 

