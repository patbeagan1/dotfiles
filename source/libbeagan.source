        printf $(git rev-parse --abbrev-ref HEAD)
    }   

    gettitle(){
        echo PT$(getbranch | sed 's/[^0-9]//g')$(getbranch | tr '_' ' ' | sed 's/pt//g' | sed 's/[0-9]//g')
