#svn wrapper to add in the addall functionality
svn() {
    if [[ "$@" == "add all" ]] || [[ "$@" == "addall" ]]; then
        command svn add $(svn st | grep ? | sed s"/\?//")
    elif [[ "$@" == "rm all" ]] || [[ "$@" == "rmall" ]]; then
        command svn rm $(svn st | grep ! | sed s"/\!//")
    elif [[ "$@" == "log" ]]; then
        command svn log | less
    else
        command svn "$@"
    fi
}

