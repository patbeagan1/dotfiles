# This file and all dependencies should be able to be run multiple times per session.

alias savedalias='source ~/libbeagan/alias'
alias refresh='savedalias; hash -r'

function source_alias() { source "$LIBBEAGAN/aliases/$1"; }
source_alias alias_android.zsh
source_alias alias_extract.zsh
source_alias alias_git.zsh
source_alias alias_gradle.zsh
source_alias alias_imagemagick.zsh
source_alias alias_ls.zsh
source_alias alias_misc.zsh
source_alias alias_network.zsh
source_alias alias_notes.zsh
source_alias alias_other.zsh
source_alias alias_python.zsh
source_alias alias_remove_empty.zsh
source_alias alias_req_ext_api.zsh
source_alias alias_scriptify.zsh
source_alias alias_tagger.zsh
source_alias alias_task_cmd.zsh
source_alias alias_teleport.zsh
source_alias alias_unix.zsh

if isMac.sh; then
  source_alias alias_machine_mac.zsh
fi

if isLinux.sh; then
  source_alias alias_machine_linux.zsh
fi

# also adding in the local scripts, which are only good for one computer at a time
# if you are not me, feel free to comment this bit out.
source "$LIBBEAGAN/alias.local.sh"
